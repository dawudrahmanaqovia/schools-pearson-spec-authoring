<?xml version="1.0" encoding="UTF-8"?>
<xsl:stylesheet xmlns:xsl="http://www.w3.org/1999/XSL/Transform"
    version="1.0">
    <xsl:template name="shortcuts">
        <div class="shortcuts">
            <div class="content">
                <h1>Shortcut keys</h1>
                <p>The following shortcut keys are supported by Xopus:</p>
                <table>
                    <tbody>
                        <tr>
                            <td width="30%" valign="top">
                                <section>
                                    <h2>Text editing</h2>
                                    <dl>
                                        <dt>
                                            <kbd>Ctrl+X</kbd>
                                        </dt>
                                        <dd>
                                            <p>cut</p>
                                        </dd>
                                        <dt>
                                            <kbd>Ctrl+C</kbd>
                                        </dt>
                                        <dd>
                                            <p>copy</p>
                                        </dd>
                                        <dt>
                                            <kbd>Ctrl+V</kbd>
                                        </dt>
                                        <dd>
                                            <p>paste</p>
                                        </dd>
                                        <dt>
                                            <kbd>Ctrl+B</kbd>
                                        </dt>
                                        <dd>
                                            <p>bold</p>
                                        </dd>
                                        <dt>
                                            <kbd>Ctrl+I</kbd>
                                        </dt>
                                        <dd>
                                            <p>emphasis</p>
                                        </dd>
                                        <dt>
                                            <kbd>Ctrl+U</kbd>
                                        </dt>
                                        <dd>
                                            <p>underline</p>
                                        </dd>
                                        <dt>
                                            <kbd>Ctrl+Shift+.</kbd>
                                        </dt>
                                        <dd>
                                            <p>superscript</p>
                                        </dd>
                                        <dt>
                                            <kbd>Ctrl+Shift+,</kbd>
                                        </dt>
                                        <dd>
                                            <p>subscript</p>
                                        </dd>
                                        
                                        
                                        <dt>
                                            <kbd>Ctrl+Z</kbd>
                                        </dt>
                                        <dd>
                                            <p>undo</p>
                                        </dd>
                                        <dt>
                                            <kbd>Ctrl+y</kbd>
                                        </dt>
                                        <dd>
                                            <p>redo</p>
                                        </dd>
                                        <dt>
                                            <kbd>Ctrl+S</kbd>
                                        </dt>
                                        <dd>
                                            <p>save</p>
                                        </dd>
                                        <dt>
                                            <kbd>Ctrl+P</kbd>
                                        </dt>
                                        <dd>
                                            <p>print</p>
                                        </dd>
                                    </dl>
                                </section>
                            </td>
                            <td width="70%" valign="top">
                                <section>
                                    <h2>Xopus specific</h2>
                                    <dl>
                                        <dt>
                                            <kbd>Alt+Insert</kbd>
                                        </dt>
                                        <dd>
                                            <p>Open the insert node menu</p>
                                        </dd>
                                        <dt>
                                            <kbd>Alt+Delete</kbd>
                                        </dt>
                                        <dd>
                                            <p>Opens the delete node menu</p>
                                        </dd>
                                        <dt>
                                            <kbd>Alt+PageDn</kbd>
                                        </dt>
                                        <dd>
                                            <p>Open move node up menu</p>
                                        </dd>
                                        <dt>
                                            <kbd>Alt+PageDn</kbd>
                                        </dt>
                                        <dd>
                                            <p>Opens move node down menu</p>
                                        </dd>
                                        <dt>
                                            <kbd>Ctrl+Enter</kbd>
                                        </dt>
                                        <dd>
                                            <p>Opens quick-insert menu</p>
                                        </dd>
                                    </dl>
                                    <p>You can use the cursor keys to navigate through menus, and use enter and escape to choose or cancel.</p>
                                </section>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </xsl:template>
</xsl:stylesheet>